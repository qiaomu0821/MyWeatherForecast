<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:id="@+id/main_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/frag_tv_currenttemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32℃"
                android:textSize="80sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/frag_tv_city"
                style="@style/todaytext"
                android:text="北京昌平区"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/frag_tv_currenttemp"/>
            <TextView
                android:id="@+id/frag_tv_condition"
                style="@style/todaytext"
                android:text="阴"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/frag_tv_city"/>
            <TextView
                android:id="@+id/frag_tv_date"
                android:text="2023-07-04 13:34:46"
                android:layout_below="@id/frag_tv_condition"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                style="@style/todaytext" />
            <TextView
                android:id="@+id/frag_tv_wind"
                style="@style/todaytext"
                android:layout_below="@id/frag_tv_date"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="南风3级"/>
            <TextView
                android:id="@+id/frag_tv_line"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/frag_tv_wind"
                android:background="#000000"
                android:layout_alignBottom="@id/frag_tv_wind"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/frag_tv_humidity"
                style="@style/todaytext"
                android:text="81%"
                android:layout_toRightOf="@id/frag_tv_line"
                android:layout_alignBottom="@id/frag_tv_wind"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/frag_iv_today"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/main_default_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"
            android:layout_below="@id/main_top_layout"/>
        <ExpandableListView
            android:id="@+id/main_elv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/main_default_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_above="@id/main_bottom_layout"/>
    <RelativeLayout
        android:id="@+id/main_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/main_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_search_24"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/main_et_searchtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColorHint="#AFAFAF"
                android:hint="请输入城市区域名称进行搜索"
                android:background="@null"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_marginTop="15dp"
                android:imeOptions="actionSearch" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
